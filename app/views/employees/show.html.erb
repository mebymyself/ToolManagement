<div class="container-fliud">
	<div class="row">
	<div class="col-md-4">
		<%= image_tag @employee.avatar.url(:medium) %>
	</div>

	<div class="col-md-8">
		<h1><%= @employee.first_name %> <%= @employee.last_name %></h1>
		<strong>First Name:</strong>
		<p><%= @employee.first_name %></p>
		<strong>Last Name:</strong>
		<p><%= @employee.last_name %></p>
		<strong>Barcode ID:</strong>
		<p><%= @employee.barcode %></p>
	</div>

<div class="clear-float"></div>
	
	<% if Employee.any_outstanding(@employee) %>
		<%= render 'outstanding_tools' %>
	<% end %>
	<br>
	<%= link_to "Back to Employees", employees_path, class: "btn btn-default" %> <%= link_to "Edit", edit_employee_path(@employee), class: "btn btn-primary" %>
	</div><br>
</div>




