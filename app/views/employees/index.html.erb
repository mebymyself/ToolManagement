<div class="page-header">
  <h1>Employees</h1><br><%#= page_entries_info @employees %>
</div>
  <p class="pull-right"><%= link_to 'Add Employee', new_employee_path, class: "btn btn-primary btn-sm" %></p>
    <div class="row"> 
      <div class="col-sm-12">
        <table class="table table-hover info-list">
          <thead>
            <tr>
              <th>No.</th>
              <th></th>
            	<th>First Name</th>
              <th>Last Name</th>
              <th>Barcode</th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.id %></td>
                <td><%= image_tag employee.avatar.url(:thumb) %></td>
                <td><%= employee.first_name %></td>
                <td><%= employee.last_name %></td>
                <td><%= employee.barcode %></td>
                <td><%= link_to 'Show', employee %></td>
                <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
<p><%#= paginate @employees, :theme => 'twitter-bootstrap-3' %></p>