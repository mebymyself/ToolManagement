<!-- <div class="well">Your Transactions</div> -->

<div class="page-header">
  <h1>Transactions </h1>
</div>

<p class="pull-right">
  <%= link_to 'Issue Tool', new_issuance_path, class: "btn btn-primary btn-sm" %> 
</p>
    
<div class="row">
  <div class="col-sm-12">
    <table id="issuance-table" class="table table-hover info-list">
      <thead>
        <tr>
          <th>Id</th>
          <th>Employee</th>
          <th>Issued On</th>
          <th>No. of items</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @issuances.each do |issuance| %>
            <tr>
            	<td><%= issuance.id %></td>
              <td><%= issuance.employee.first_name %> <%= issuance.employee.last_name %></td>
              <td><%= issuance.created_at %></td>
              <td><%= issuance.line_items.count %></td>
              <td><%= link_to 'Show', issuance_line_items_path(issuance) %></td>
            </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>