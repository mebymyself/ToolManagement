<div class="nested-fields line_item_fields">
  <div class="form-group">
    <%= f.label :incoming_tool_barcode, "Tool Barcode" %>
    <%= f.text_field :incoming_tool_barcode, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :quantity %>
    <%= f.text_field :quantity, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :due_date %><br>
    <%= f.date_field :due_date, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :return_date %><br>
    <%= f.date_field :return_date, class: "form-control" %>
  </div>
  
  <%= link_to_remove_association "remove line item", f %>
</div>





    