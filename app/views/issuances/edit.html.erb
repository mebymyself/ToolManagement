<div class="page-header">
    <h1>Return Tool</h1>
</div>
  


<div class="col-md-6">
  <%= form_for @issuance do |f| %>
    <% if @issuance.errors.any? %>
      <div id="error_explanation" class="bit-warning">
        <h2><%= pluralize(@issuance.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
         <% @issuance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :issued_on, "Issued On" %>
      <%= f.text_field :issued_on, :value => Time.now.in_time_zone("Eastern Time (US & Canada)"), class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :incoming_employee_barcode, "Employee Barcode" %>
      <%= f.text_field :incoming_employee_barcode, class: "form-control", value: @issuance.employee_barcode, :placeholder => "Scan Employee Barcode", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :incoming_tool_barcode, "Tool Barcode" %>
      <%= f.text_field :incoming_tool_barcode, class: "form-control", value: @issuance.tool_barcode, :placeholder => "Scan Tool Barcode" %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :due_date %><br>
      <%= f.date_field :due_date, class: "form-control" %>
    </div>
    <div>
      <%= f.label :returned_on, "Returned On" %>
      <%= f.date_field :returned_on, class: "form-control" %>
    </div><br>
    
    <%= f.submit "submit", class: "btn btn-primary" %>
  <% end %>

</div>