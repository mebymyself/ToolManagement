<div class="col-md-12">
  <%= simple_form_for @issuance do |f| %>
    <% if @issuance.errors.any? %>
      <div id="error_explanation" class="alert alert-danger close" data-dismiss="alert" >
        <h2><%= pluralize(@issuance.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
         <% @issuance.errors.full_messages.each do |message| %>
          <li> * <%= message %></li>
         <% end %>
        </ul>
      </div>
    <% end %>


  <div class="form-group">
    <div class="row">
      <div class="col-md-4">
        <div class="form-group">
          <%= f.label :incoming_employee_barcode, "Employee Barcode" %>
          <%= f.text_field :incoming_employee_barcode, class: "form-control", autofocus: true %><br/>
          <%#= link_to "Scan", "#myModal", "data-toggle" => "modal", class: "btn btn-default", id: "activate_scanner_tool" %>
          <button type="button" id = "activate_scanner", data-toggle="modal" data-target="#myModal" class="btn btn-default btn-sm">Scan</button>
        </div>
      </div>
    </div> 

    <div class="modal fade" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Scanning employee barcode...</h4>
          </div>
          <div class="modal-body">
            <div id ="webcam_employee_placeholder" style="width:330px;float:left;">
            <div id="webcam_employee"></div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>


  </div>
 

      <h3>Line Items</h3>
      
      <div id="line_items">
        <%= f.simple_fields_for :line_items do |line_item| %>
          <%= render 'line_item_fields', :f => line_item %>
        <% end %>
      </div>
     

      <div>
        <%= link_to_add_association '', f, :line_items, class: "btn btn-default btn-lg btn-block glyphicon glyphicon-plus" %>
      </div><br>
      <div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>

  </div>
    
  
  <% end %>

</div>

