<div class="form-container">
  <%= form_for( @tool, :html => { :multipart => true } ) do |f| %>
    <% if @tool.errors.any? %>
      <div id="error_explanation" class="bit-warning">
        <h2><%= pluralize(@tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

        <ul>
          <% @tool.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :tool_barcode, "Barcode ID" %>
      <%= f.text_field :tool_barcode, class: "form-control", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control", :maxlength => 120, :size => 90 %>
    </div>
    <div class="form-group">
      <%#= f.label :inventory_type %><br>
      <%#= f.collection_select(:inventory_type_id, InventoryType.all, :id, :name) %>
    </div>
    <div class="form-group">
      <%= f.label :quantity, "Total Quantity" %>
      <%= f.text_field :quantity, class: "form-control" %>
    </div>    
    <div class="form-group">
      <%#= f.label :warranty_end, "Warranty End Date" %><br>
      <%#= f.date_field :warranty_end, class: "form-control" %>
    </div>
    <div class="form-group">
      <%#= f.label :calibration_end, "Calibration Expiry" %><br>
      <%#= f.date_field :calibration_end, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :notes %>
      <%= f.text_area :notes, class: "form-control" %>
    </div>
    <div class="form-group">
      <%#= f.label :image %>
      <%#= f.file_field :image %>
    </div>
    <div class="form-group">
      <%= f.label :tag_list, "Tags (separated by comma)" %>
      <%= f.text_field :tag_list, class: "form-control" %>
    </div>   
    <div class="form-group">
      <%= f.submit "submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>