<div class="page-header">
  <h1>Tools</h1><p><%#= page_entries_info @tools %></p>
</div>
<p class="pull-right"><%= link_to 'Add Tool', new_tool_path, class: "btn btn-primary btn-sm" %></p>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-hover info-list">
        <thead>
          <tr>
            <th>Image</th>
            <th>Tags</th>
            <th>Barcode ID</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>On Hand</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @tools.each do |tool| %>
            <tr>
              <td><%= image_tag tool.image.url(:thumb) %></td>
              <td><%= raw tool.tag_list.map { |t| link_to t, tag_path(t)}.join(', ') %></td>
              <td><%= tool.tool_barcode %></td>
              <td><%= tool.description %></td>
              <td><%= tool.quantity %></td>
              <td><%#= tool.quantity_on_hand %></td>
              <td><%= link_to 'Show', tool %></td>
              <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
              <td><%= link_to 'Destroy', tool, class: "label label-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

<p><%#= paginate @tools, :theme => 'twitter-bootstrap-3' %></p>

