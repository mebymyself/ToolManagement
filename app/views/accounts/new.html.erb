<div class="col-md-6 col-md-offset-3 panel panel-default sign-up">
	<div class="panel-body">
		<h2>Create an Account</h2>

		<%= simple_form_for @account do |f| %>
			<%= f.fields_for :owner do |o| %>
				<%= o.input :first_name %>
				<%= o.input :last_name %>
				<%= o.input :email, required: true %>
				<%= o.input :password, required: true %>
				<%= o.input :password_confirmation, required: true %>
			<% end %>


			<%= f.input :subdomain do %>
				<div class="input-group">
					<%= f.input_field :subdomain, class: 'form-control' %>
					<span class="input-group-addon">.toolhero.ca</span>
				</div>
			<% end %>
			<%= f.button :submit, class: 'btn-primary btn-block btn-lg' %>
		<% end %>
	</div>
</div>
