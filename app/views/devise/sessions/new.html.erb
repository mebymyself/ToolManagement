<div class="col-md-4 col-md-offset-4 well signin">
	<h2>Log in</h2>

	<%= simple_form_for(resource, as: resource_name, 
											url: session_path(resource_name),
											wrapper_mappings: { boolean: :vertical_boolean }) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false, class: "form-control" %>
	    <%= f.input :password, required: true, placeholder: "Password", label: false, class: "form-control" %>
	    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Log in", class: "btn-primary btn-block btn-lg" %>
	  </div>
	<% end %>


	<%= render "devise/shared/links" %>
</div>